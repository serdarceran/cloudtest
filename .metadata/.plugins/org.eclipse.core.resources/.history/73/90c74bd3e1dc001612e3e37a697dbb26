package com.example;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.netflix.appinfo.InstanceInfo;
import com.netflix.discovery.DiscoveryClient;

@RestController
public class LucyWordController {

	
	@Value("${lucky-word}") String luckyWord;
	
	@RequestMapping("/lucky-word")
	public String sayLuckWord() {
		return "This is my luck word:" + luckyWord;
	}
	
	@Autowired DiscoveryClient client;
	
	private URI storeServiceUrl() {
		Optional<InstanceInfo> storeInstance = client.getInstancesById("Store").stream().findFirst();
		storeInstance.map(f-> f.getHomePageUrl()).orElse(null);
		
	}
}
